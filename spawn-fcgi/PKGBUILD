# Contributor: Felix <felix@seconddrawer.com.au>
pkgname=spawn-fcgi
pkgver=1.6.2
pkgrel=1
pkgdesc="Fast CGI process spawner"
arch=(i686 x86_64)
url="http://redmine.lighttpd.net/projects/spawn-fcgi"
license=('GPL')
groups=()
depends=(glibc)
makedepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
source=(http://www.lighttpd.net/download/$pkgname-$pkgver.tar.gz)
noextract=()
md5sums=(e11fe80bf9e59ab4ab39797181eafab6)

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --sysconfdir=/etc --libexecdir=/usr/lib  --localstatedir=/var
  make || return 1
  make DESTDIR="$pkgdir/" install
}

# vim:set ts=2 sw=2 et:
